<%= form_with model: event do |form| %>
  <div>

    <%= form.label "Event Title" %><br>
    <%= form.text_field :title %><br>
   <% event.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>

    <%= form.label "Event Description" %><br>
    <%= form.text_field :description %><br>
   <% event.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>

    <%= form.label "Event Location" %><br>
    <%= form.text_field :location %><br>
    <% event.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
    <% end %>

  <%= form.label "Event Date" %><br>
  <%= form.date_select :date %>

  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>